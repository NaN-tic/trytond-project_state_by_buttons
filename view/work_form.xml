<data>
    <xpath expr="/form/notebook/page/field[@name='total_effort']"
            position="after">
        <newline/>
        <label name="closing_date"/>
        <group id="closing_date" col="2">
            <field name="closing_date" widget="date"/>
            <field name="closing_date" widget="time"/>
        </group>
    </xpath>
    <xpath expr="/form/notebook/page/group/group[@id='buttons']"
            position="inside">
        <button name="open" string="Open" icon="tryton-back"/>
        <button name="done" string="Done" icon="tryton-forward"/>
    </xpath>
</data>
